@model RegisterViewModel

@{
    ViewBag.Title = "Registrar novo Usúario";
}

<h2>Registrar novo Usúario</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" asp-for="Nome" required />
    </div>
    <div class="form-group">
        <label for="Username">Usuário</label>
        <input type="text" class="form-control" id="Username" name="Username" asp-for="Username" required />
    </div>
    <div class="form-group">
        <label for="Password">Senha</label>
        <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" required />
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Confirmar Senha</label>
        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword"
            asp-for="ConfirmPassword" required />
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
    <a asp-action="Login" class="btn btn-link">Já tem uma conta? Entre</a>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
