@model IEnumerable<MVC.Models.Endereco>

@{
    ViewData["Title"] = "Listagem de Endereço";
}

<h2>Endereços</h2>

<p>
    <a asp-action="Criar">Novo Endereço</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logradouro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Cep)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Logradouro)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Bairro)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Uf)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Deletar" asp-route-id="@item.Id">Deletar</a> |
                </td>
            </tr>

        }

    </tbody>

</table>
